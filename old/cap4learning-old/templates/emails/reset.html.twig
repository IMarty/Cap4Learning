{% extends 'mail.html.twig' %}

{% block body %}
    <tr>
        <td style="height: 20px; background-color: #D2E6E4;" height="20"></td>
    </tr>
    <tr>
        <td style="padding: 10px 20px; background-color: #D2E6E4; color: #03565c; text-align: center; font-size: 20px; font-weight: 700" align="center" width="100">
            {{ "You requested a new password !" | trans}}
        </td>
    </tr>
    <tr>
        <td style="height: 20px; background-color: #D2E6E4;" height="20"></td>
    </tr>
    <tr>
        <td style="padding: 10px 20px; background-color: #D2E6E4; color: #03565c; text-align: center; font-size: 16px;" align="center" width="100">
            <span style="font-weight: 700">
                {{ 'We received a new request to reset your user password. Click on the link below ' | trans }}
            </span>
        </td>
    </tr>
    <tr>
        <td style="height: 5px; background-color: #D2E6E4;" height="5"></td>
    </tr>
    <tr>
        <td style="height: 5px; background-color: #D2E6E4;" align="center">
            <table cellspacing="0" cellpadding="0">
                <tr>
                    <td style="border-radius: 2px;" bgcolor="#03565c" align="center">
                        <a href="{{ url }}" target="_blank" style="padding: 8px 12px; border: 1px solid #03565c;border-radius: 2px;font-family: Helvetica, Arial, sans-serif;font-size: 14px; color: #ffffff;text-decoration: none;font-weight:bold;display: inline-block;">
                            {{ 'Reinitialize password' | trans }}
                        </a>
                    </td>
                </tr>
            </table>
        </td>
    </tr>
    <tr>
        <td style="height: 20px; background-color: #D2E6E4;" height="20"></td>
    </tr>
{% endblock %}