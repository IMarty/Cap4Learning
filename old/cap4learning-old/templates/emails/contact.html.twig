{% extends 'mail.html.twig' %}

{% block body %}
    <tr>
        <td style="height: 20px; background-color: #D2E6E4;" height="20"></td>
    </tr>
    <tr>
        <td style="padding: 10px 20px; background-color: #D2E6E4; color: #03565c; text-align: center; font-size: 20px; font-weight: 700" align="center" width="100">
            {{ "You received a new message from Cap4Learning website !" | trans}}
        </td>
    </tr>
    <tr>
        <td style="height: 20px; background-color: #D2E6E4;" height="20"></td>
    </tr>
    <tr>
        <td style="padding: 10px 20px; background-color: #D2E6E4; color: #03565c; text-align: center; font-size: 16px;" align="center" width="100">
            <span style="font-weight: 700">{{ 'Page de conversion' | trans }} :</span><br>
            {{ page }}
        </td>
    </tr>
    <tr>
        <td style="height: 20px; background-color: #D2E6E4;" height="20"></td>
    </tr>
    <tr>
        <td style="padding: 10px 20px; background-color: #D2E6E4; color: #03565c; text-align: center; font-size: 16px;" align="center" width="100">
            <span style="font-weight: 700">{{ 'Type de contact' | trans }} :</span><br>
            {% if contact.type == constant('App\\Entity\\Contact::CONTACT_DEVIS')%}
               {{ 'Demande de devis' | trans }}
            {% elseif contact.type == constant('App\\Entity\\Contact::CONTACT_MORE_INFOS') %}
                {{ 'Je veux en savoir plus sur cette formation' | trans }}
            {% elseif contact.type == constant('App\\Entity\\Contact::CONTACT_INTRA')  %}
                {{ 'Je souhaite avoir des renseignements pour une formule intra' | trans }}
            {% else %}
                {{ 'Autres' | trans }}
            {% endif %}
        </td>
    </tr>
    <tr>
        <td style="height: 5px; background-color: #D2E6E4;" height="5"></td>
    </tr>
    <tr>
        <td style="padding: 10px 20px; background-color: #D2E6E4; color: #03565c; text-align: center; font-size: 16px;" align="center" width="100">
            <span style="font-weight: 700">{{ 'Email' | trans }} :</span><br>
            {{ contact.email }}
        </td>
    </tr>
    <tr>
        <td style="height: 5px; background-color: #D2E6E4;" height="5"></td>
    </tr>
    <tr>
        <td style="padding: 10px 20px; background-color: #D2E6E4; color: #03565c; text-align: center; font-size: 16px;" align="center" width="100">
            <span style="font-weight: 700">{{ 'Name' | trans }} :</span><br>
            {{ contact.name }}
        </td>
    </tr>
    <tr>
        <td style="height: 5px; background-color: #D2E6E4;" height="5"></td>
    </tr>
    <tr>
        <td style="padding: 10px 20px; background-color: #D2E6E4; color: #03565c; text-align: center; font-size: 16px;" align="center" width="100">
            <span style="font-weight: 700">{{ 'Message' | trans }} :</span><br>
            {{ contact.message }}
        </td>
    </tr>
    <tr>
        <td style="height: 5px; background-color: #D2E6E4;" height="5"></td>
    </tr>
{% endblock %}